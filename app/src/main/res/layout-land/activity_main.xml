            android:layout_height="wrap_content"
            android:background="#161E2A"
            android:gravity="right|bottom"
            android:text=""
            android:textColor="#97CDAE"
            android:textSize="50dp"
            android:visibility="visible"
            tools:visibility="visible" />

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            tools:ignore="ExtraText">

            <Button
                android:id="@+id/buRES"
                style="@style/Widget.MaterialComponents.ExtendedFloatingActionButton"
                android:layout_width="80dp"
                android:layout_height="40dp"
                android:layout_marginStart="20dp"
                android:layout_marginTop="3dp"
                android:backgroundTint="#161E2A"
                android:onClick="ResAction"
                android:text="âŒ«"
                android:textColor="#1ECA6B"
                android:textSize="15dp"
                app:cornerRadius="36dp"
                app:layout_constraintEnd_toStartOf="@+id/butpour"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                tools:ignore="DuplicateIds" />

            <Button
                android:id="@+id/butpour"
                style="@style/Widget.MaterialComponents.ExtendedFloatingActionButton"
                android:layout_width="80dp"
                android:layout_height="40dp"
                android:layout_marginStart="125dp"
                android:layout_marginTop="3dp"
                android:layout_marginEnd="20dp"
                android:backgroundTint="#161E2A"
                android:onClick="opAction"
                android:text="%"
                android:textColor="#1ECA6B"
                android:textSize="15dp"
                app:cornerRadius="36dp"
                app:layout_constraintEnd_toStartOf="@+id/butopDiv"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                tools:ignore="DuplicateIds" />

            <Button
                android:id="@+id/butopDiv"
                style="@style/Widget.MaterialComponents.ExtendedFloatingActionButton"
                android:layout_width="80dp"
                android:layout_height="40dp"
                android:layout_marginStart="195dp"
                android:layout_marginTop="3dp"
                android:backgroundTint="#161E2A"
                android:onClick="opAction"
                android:text="/"
                android:textColor="#1ECA6B"
                android:textSize="15dp"
                app:cornerRadius="36dp"
                app:layout_constraintEnd_toStartOf="@+id/butDel"
